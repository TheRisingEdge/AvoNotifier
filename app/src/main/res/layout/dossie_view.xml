<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Info"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        style="@style/textTitle" />

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="6dp" >

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1"
    android:padding="20dp" >

    <TableRow>
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="wrap_content"
            android:text="Modificat"
            style="@style/textDetails" />

        <TextView
            android:id="@+id/dossieModified"
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="wrap_content"
            android:text="12.10.2013"
            style="@style/textDetails" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="wrap_content"
            android:text="Inregistrat"
            style="@style/textDetails" />

        <TextView
            android:id="@+id/dossieRegistered"
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="wrap_content"
            android:text="12.10.2013"
            style="@style/textDetails" />

    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="wrap_content"
            android:text="Sectie"
            style="@style/textDetails" />

        <TextView
            android:id="@+id/dossieSection"
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="wrap_content"
            android:text="Penal"
            style="@style/textDetails" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="wrap_content"
            android:text="Materie"
            style="@style/textDetails" />

        <TextView
            android:id="@+id/dossieMaterie"
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="wrap_content"
            android:text="Penal"
            style="@style/textDetails" />

    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="wrap_content"
            android:text="Obiect"
            style="@style/textDetails" />

        <TextView
            android:id="@+id/dossieTarget"
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="wrap_content"
            android:text="Penal"
            style="@style/textDetails" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="wrap_content"
            android:text="Stadiu"
            style="@style/textDetails" />

        <TextView
            android:id="@+id/dossieState"
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="wrap_content"
            android:text="Penal"
            style="@style/textDetails" />
    </TableRow>

</TableLayout>
</android.support.v7.widget.CardView>

    <TextView
        style="@style/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sedinte"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:id="@+id/dossieMeetings"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </LinearLayout>
</LinearLayout>
