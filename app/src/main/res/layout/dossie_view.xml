<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Info"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        style="@style/textTitle" />

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="6dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="20dp" >

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:stretchColumns="1">

    <TableRow>
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="wrap_content"
            android:text="Modificat"
            style="@style/textSmall" />

        <TextView
            android:id="@+id/dossieModified"
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="wrap_content"
            android:text="12.10.2013"
            style="@style/textSmall"
            android:textStyle="bold" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="wrap_content"
            android:text="Inregistrat"
            style="@style/textSmall" />

        <TextView
            android:id="@+id/dossieRegistered"
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="wrap_content"
            android:text="12.10.2013"
            style="@style/textSmall" />

    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="wrap_content"
            android:text="Sectie"
            style="@style/textSmall" />

        <TextView
            android:id="@+id/dossieSection"
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="wrap_content"
            android:text="Penal"
            style="@style/textSmall" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="wrap_content"
            android:text="Materie"
            style="@style/textSmall" />

        <TextView
            android:id="@+id/dossieMaterie"
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="wrap_content"
            android:text="Penal"
            style="@style/textSmall" />

    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="wrap_content"
            android:text="Obiect"
            style="@style/textSmall" />

        <TextView
            android:id="@+id/dossieTarget"
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="wrap_content"
            android:text="Penal"
            style="@style/textSmall" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="wrap_content"
            android:text="Stadiu"
            style="@style/textSmall" />

        <TextView
            android:id="@+id/dossieState"
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="wrap_content"
            android:text="Penal"
            style="@style/textSmall" />
    </TableRow>

</TableLayout>
</android.support.v7.widget.CardView>

    <TextView
        style="@style/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sedinte"
        android:layout_marginLeft="10dp" />

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="15dp" >

        <LinearLayout
            android:id="@+id/dossieMeetings"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
